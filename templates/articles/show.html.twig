{% extends 'base.html.twig' %}
{% block title %}{% endblock %}
{% block body %}


<div class="card mb-3" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">{{article.nom}}</h5>
        <h6 class="card-title">{{article.prix}}</h6>
        <p class="card-text">{{article.deccription}}</p>
        <p class="card-text">
        {% if article.stock > 0 %}
    <span class="badge sec-bg mr-5 p-2">Disponible</span>
            {% else %}
            <span class="badge badge-danger mr-5 p-2">Indisponible</span>
            {% endif %}
        </p>
        <p><a href="{{path("cart_add", {id: article.id})}}" class="btn btn-success">
                        <i class="bi bi-cart-plus"></i> Add to Cart
                    </a>
        </p>
      </div>
    </div>
  </div>
</div>


<hr>
<a href="/">Retour</a>
{% endblock %}


